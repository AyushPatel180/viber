# =============================================================================
# VIBER Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# NEVER commit .env files with real secrets

# =============================================================================
# General
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# =============================================================================
# Service Ports
# =============================================================================
ORCHESTRATOR_PORT=3000
CKG_SERVICE_PORT=3001
VECTOR_SERVICE_PORT=3002
SPECULATIVE_ENGINE_PORT=3003
ORACLE_ADAPTER_PORT=3004
SANDBOX_EXECUTOR_PORT=3005
POLICY_SERVICE_PORT=3006
AUDIT_SERVICE_PORT=3007
UI_PORT=3010

# =============================================================================
# HashiCorp Vault
# =============================================================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_MOCK=true  # Set to false for real Vault

# =============================================================================
# Keycloak / OIDC
# =============================================================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=viber
KEYCLOAK_CLIENT_ID=viber-api
KEYCLOAK_CLIENT_SECRET=your-client-secret

# =============================================================================
# Graph Database (Neo4j)
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# =============================================================================
# Vector Store
# =============================================================================
VECTOR_STORE_TYPE=milvus  # milvus, pinecone, qdrant
MILVUS_HOST=localhost
MILVUS_PORT=19530

# =============================================================================
# Oracle (Cloud LLMs)
# =============================================================================
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
ORACLE_MAX_REQUESTS_PER_MINUTE=60
ORACLE_COST_CAP_USD=100.00

# =============================================================================
# Local Model (Speculative Engine)
# =============================================================================
LOCAL_MODEL_PATH=/models/llama-7b.gguf
LOCAL_MODEL_CONTEXT_SIZE=4096

# =============================================================================
# Sandbox Executor
# =============================================================================
SANDBOX_RUNTIME=docker  # docker, firecracker
SANDBOX_TIMEOUT_MS=30000
SANDBOX_MEMORY_LIMIT_MB=512
SANDBOX_NETWORK_ENABLED=false

# =============================================================================
# Audit Store
# =============================================================================
AUDIT_STORE_TYPE=local  # local, s3
AUDIT_STORE_PATH=./audit-logs
AUDIT_SIGNING_KEY=your-hmac-key

# AWS S3 (if AUDIT_STORE_TYPE=s3)
AWS_REGION=us-east-1
AWS_S3_BUCKET=viber-audit-logs

# =============================================================================
# Cost Controls
# =============================================================================
ORG_SPEND_CAP_USD=1000.00
PROJECT_SPEND_CAP_USD=500.00
USER_SPEND_CAP_USD=100.00
